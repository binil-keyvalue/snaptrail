{
    "name": "Snap Trail",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Provides Document Generation in the side panel.",
    "background": {
        "service_worker": "service-worker.js"
    },
    "icons": {
        "128": "images/icon-128.png",
        "16": "images/icon-16.png"
    },
    "side_panel": {
        "default_path": "side-panel.html"
    },
    "action": {},
    "permissions": [
        "sidePanel",
        "contextMenus",
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "desktopCapture"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}