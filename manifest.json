{
  "manifest_version": 3,
  "name": "Action Recorder",
  "version": "1.0",
  "description": "Capture user actions with screenshots for test documentation",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Action Recorder"
  },

  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
